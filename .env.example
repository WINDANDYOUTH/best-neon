# Copy this file to .env.local and replace with your actual values
# See SHOPIFY_SETUP.md for detailed instructions

# Your company/brand name
COMPANY_NAME="Your Company Name"

# Your site name (appears in page titles)
SITE_NAME="Next.js Commerce"

# Your Shopify store domain (e.g., mystore.myshopify.com)
# DO NOT include https:// or brackets []
SHOPIFY_STORE_DOMAIN="your-store.myshopify.com"

# Shopify Storefront API Access Token
# Get from: Shopify Admin → Settings → Apps → Develop apps
SHOPIFY_STOREFRONT_ACCESS_TOKEN=""

# Webhook secret for revalidation (any random string)
SHOPIFY_REVALIDATION_SECRET=""
